{
  "name": "mkbox-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "pnpm run clean && pnpm run build:background && pnpm run build:app",
    "build:background": "esbuild src/background.ts --bundle --minify --format=esm --sourcemap --outdir=public --external:three --loader:.png=file",
    "build:app": "esbuild src/app.ts --bundle --minify --format=esm --sourcemap --outdir=public",
    "dev": "pnpm run clean && pnpm run dev:background & pnpm run dev:app",
    "dev:background": "esbuild src/background.ts --bundle --format=esm --sourcemap --outdir=public --external:three --loader:.png=file --watch",
    "dev:app": "esbuild src/app.ts --bundle --format=esm --sourcemap --outdir=public --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist public/*.js public/*.js.map"
  },
  "devDependencies": {
    "@types/three": "^0.160.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "three": "^0.160.0"
  }
}
